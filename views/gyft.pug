extends layout

block content
    div(ng-controller='timetableController', style='margin-top: 30px;')
        -   if (locals.user)
            .row
                .col-md-10.col-md-offset-1
                    table.table.table-bordered(ng-bind-html='timetableFromHtml')
        -   if (locals.user)
            .row
                .col-md-6.col-md-offset-3
                    button.btn.btn-block.btn-default(type='button', ng-click='downloadTT()') Download ICS file
        -   else
            .row
                p You need to be logged in to view this.